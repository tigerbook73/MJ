{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": "./",
    "moduleResolution": "bundler",
  },
  "include": [
    "src/**/*"
  ],
}