{
  "name": "@mj/client",
  "version": "0.0.1",
  "description": "A MJ Project",
  "license": "MIT",
  "productName": "My Mahjong",
  "author": "Shengtian Liao (liaoshengtian@hotmail.com)",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue ./ && vue-tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "jest --passWithNoTests",
    "test:debug": "node --inspect node_modules/jest/bin/jest.js --runInBand",
    "dev": "quasar dev",
    "start": "quasar dev",
    "build": "quasar build && cp -r ./dist/spa/* ../server/public",
    "postinstall": "quasar prepare"
  },
  "dependencies": {
    "@mj/shared": "*",
    "@quasar/extras": "^1.16.4",
    "axios": "^1.2.1",
    "dayjs": "^1.11.13",
    "pinia": "^3.0.1",
    "quasar": "^2.16.0",
    "socket.io-client": "^4.7.5",
    "vue": "^3.4.18",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@quasar/app-vite": "^2.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.5.9",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "symlink-dir": "^6.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.9.0",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
